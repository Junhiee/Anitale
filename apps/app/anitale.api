syntax = "v1"

import (
	"./api/base.api"
	"./api/anime.api"
	"./api/user.api"
)

info (
	title:   "Main API"
	desc:    "Main API"
	author:  "HUI"
	email:   "2943452655@qq.com"
	version: "1.0"
)

@server (
	prefix: /v1
	group:  anime
)
service anitale-api {
	@handler GetAnimeList
	get /anime (AnimeListReq) returns (AnimeListResp)
}

@server (
	prefix: /v1
	group:  user
)
service anitale-api {
	@handler UserLogin
	post /login (UserLoginReq) returns (UserLoginResp)
}

